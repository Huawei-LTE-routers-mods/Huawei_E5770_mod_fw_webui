#!/system/bin/busybox sh
set -e

CFILE="/data/userdata/dnscrypt"

if [[ ! "$1" ]];
then
    echo "$0 0 - disable DNSCrypt"
    echo "$0 1 - enable DNSCrypt"
    echo "$0 2 - enable DNSCrypt with adblock"
    # Make sure the file exist
    touch "$CFILE"
    AB_ENABLED="$(cat $CFILE)"
    [[ "$AB_ENABLED" == "1" ]] && AB_ENABLED="enabled"
    [[ "$AB_ENABLED" == "2" ]] && AB_ENABLED="enabled + adblock"
    [[ "$AB_ENABLED" == "0" ]] || [[ "$AB_ENABLED" == "" ]] && AB_ENABLED="disabled"
    echo "DNSCrypt status: $AB_ENABLED"
    echo "WARNING! DNSCrypt disables IPv6 DNS queries from the device!"
    exit 1
fi

if [[ "$1" != "0" ]] && [[ "$1" != "1" ]] && [[ "$1" != "2" ]];
then
    echo "Wrong value!"
    exit 2
fi

echo "$1" > $CFILE
/etc/dnscrypt.sh "$1"
